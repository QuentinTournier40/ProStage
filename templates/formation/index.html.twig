{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <h1>
        <center>Formations :</center>
    </h1>
    <br>
    <div class="row justify-content-center">
        {% for formation in formations %}
            <div class="col-md-4 col-sm-6 p-0 truc">
                <div class="service-item text-center">
                    <span class="countPetit">ID : {{formation.id}}</span>
                    <br>
                    <h4>{{formation.titre}}</h4>
                    <br>
                    <a class="btn btn-main" href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                    <a class="btn btn-main" href="{{ path('formation_edit', {'id': formation.id}) }}">Editer</a>
                </div>
                <br>
                <br>
            </div>
            {% if loop.index % 2 == 0 %}
                <div class="w-100"></div>
            {% endif %}
        {% else %}
            <h1>
                <center>Aucune formation.</center>
            </h1>
        {% endfor %}
        <br>
        <center><a class="btn btn-main" href="{{ path('formation_new') }}">Cr√©er une formation</a></center>
    </div>
{% endblock %}
