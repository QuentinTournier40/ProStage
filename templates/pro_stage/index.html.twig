{% extends 'base.html.twig' %}

{% block body %}
    
	<br />
	<h1>
        <center>Stages :</center>
    </h1>
	<br />

    <div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th class="col-md-2">
						</th>
						<th class="col-md-3">
							Nom stage
						</th>
						<th class="col-md-2">
							Nom entreprise
						</th>
						<th class="col-md-3">
							Formation(s) vis√©e(s)
						</th>
						<th class="col-md-2">
						</th>
					</tr>
				</thead>

				<tbody>
                    {% for stage in stages %}
                        <tr>
							<td class="col-md-2">
							</td>
                            <td class="col-md-3">
                                <a href="{{path('pro_stage_stage_id', {'id': stage.getId()}) }}" <button type="button" class="btn btn-link">{{stage.getTitre()}}</button>
                            </td>
                            <td class="col-md-2">
                                <a href="{{path('pro_stage_entreprise_id', {'id': stage.getEntreprise().getId()}) }}" <button type="button" class="btn btn-link">{{stage.getEntreprise().getNom()}}</button>
                            </td>
                            <td class="col-md-3">
                                {% for formation in stage.getTypeFormation() %}
                                    <a href="{{path('pro_stage_formation_id', {'id': formation.getId()}) }}" <button type="button" class="btn btn-link">{{formation.getTitre()}}</button>
                                {% endfor %}
                            </td>
							<td class="col-md-2">
							</td>
                        </tr>
                    {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
    </div>

{% endblock %}